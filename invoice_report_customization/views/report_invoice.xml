<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">
            <!--
                        <xpath expr="//th[@name='th_description']" position="replace">
                            <th name="th_description" class="text-left" style="width:386px !important;">
                                <span>Description</span>
                            </th>
                        </xpath>
            -->
            <xpath expr="//tbody//tr" position="after">
                <tr>
<!--                    <td/>-->
                    <td name="account_invoice_line_name" colspan="6">
<!--                        <span t-field="line.name" t-options="{'widget': 'text'}"/>-->
                        <p t-if="line.sale_line_ids" class="mb-0">
                            <strong>Our/Ref:</strong>
                            <t t-esc="line.sale_line_ids.mapped('order_id').name"/>
                            -
                            <strong>Your/Ref:</strong>
                            <t t-esc="line.move_id.ref"/>
                        </p>
                        <p t-if="line.sale_line_ids" class="mb-0">
                            <t t-set="delivery_id"
                               t-value="line.sale_line_ids.mapped('order_id').picking_ids.filtered(lambda p: p.picking_type_code == 'outgoing' and p.state != 'cancel')"/>
                            <strong t-if="delivery_id">Delivery:</strong>
                            <t i-if="delivery_id" t-esc="delivery_id.name"/>
                        </p>
                    </td>
                </tr>
            </xpath>
        </template>
    </data>
</odoo>
